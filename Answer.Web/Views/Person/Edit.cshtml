@model Answer.Web.Models.PersonEditViewModel

<div class="row">

    @using (Html.BeginForm("Edit", "Person"))
    {
        @Html.HiddenFor(m => m.FirstName)
        @Html.HiddenFor(m => m.LastName)
        
        <h2>Update @Model.FullName </h2>

        <div class="col-md-6">

            <h2>User Details</h2>

            <div class="form-control">
                @Html.LabelFor(m => m.IsAuthorised)
                @Html.CheckBoxFor(m => m.IsAuthorised)
            </div>

            <div class="form-control">
                @Html.LabelFor(m => m.IsEnabled)
                @Html.CheckBoxFor(m => m.IsEnabled)
            </div>

        </div>

        <div class="col-md-6">

            <h2>Favourite Colours</h2>

            @for (var i = 0; i < Model.ColourItems.Count; i++)
            {
                <p>@Model.ColourItems[i].Name</p>
                
                @Html.HiddenFor(m => m.ColourItems[i].Name)
                @Html.HiddenFor(m => m.ColourItems[i].Id)
                @Html.CheckBoxFor(m => m.ColourItems[i].IsActive)
                
                <br/>
            }
            <button class="warning">Save</button>

        </div>
    }
</div>



